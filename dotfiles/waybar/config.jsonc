        "format-wifi": "{signalStrength}% Ôá´ ",
        "format-ethernet": "{ipaddr}/{cidr} Óºâ ",
        "tooltip-format": "{essid}\n{ifname} via {gwaddr}",
        "format-linked": "{ifname} (No IP) Ôëå ",
        "format-disconnected": "Disconnected ‚ö† ",
    },
    "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "format-icons": {
        "default": "ÔÉß",
        "performance": "ÔÉß",
        "balanced": "Ôâé",
        "power-saver": "ÔÅ¨"
      }
    },
    "cpu": {
